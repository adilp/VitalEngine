<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adilpatel.vitalengine">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivitiesPackage.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivitiesPackage.ReferralStory.newReferenceActivity" />
        <activity android:name=".ActivitiesPackage.ReferralStory.CreateMyTeamActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".ActivitiesPackage.ReferralStory.CreateReferralTeamActivity" />
        <activity android:name=".ActivitiesPackage.ReferralStory.ReferralConfirmActivity" />
        <activity android:name=".ActivitiesPackage.Conversation.CreateMessageRecipientActivity" />
        <activity android:name=".ActivitiesPackage.Conversation.MessageConfirmActivity" />
        <activity android:name=".ActivitiesPackage.ChatStory.ChatlistActivity" />
        <activity
            android:name=".ActivitiesPackage.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity2"
            android:label="@string/title_activity_login2" />
        <activity android:name=".ActivitiesPackage.ReferralStory.RecyclerCreateMyTeamActivity"></activity>
    </application>

</manifest>
